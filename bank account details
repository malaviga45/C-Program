#include <stdio.h>

// Define structure
struct bank
{
    int accno;
    char name[50];
    float balance;
};

int main()
{
    struct bank b;

    // Input bank account details
    printf("Enter Account Number: ");
    scanf("%d", &b.accno);

    printf("Enter Account Holder Name: ");
    scanf("%s", b.name);

    printf("Enter Account Balance: ");
    scanf("%f", &b.balance);

    // Display bank account details
    printf("\n--- Bank Account Details ---\n");
    printf("Account Number: %d\n", b.accno);
    printf("Account Holder Name: %s\n", b.name);
    printf("Account Balance: %.2f\n", b.balance);

    return 0;
}
