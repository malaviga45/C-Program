#include <stdio.h>

// Function prototype
float calculateAverage(int n, float numbers[]);

int main() {
    int n, i;
    
    printf("Enter the number of elements: ");
    scanf("%d", &n);
    
    float numbers[n];  // Array to store numbers
    
    // Input numbers
    for(i = 0; i < n; i++) {
        printf("Enter number %d: ", i + 1);
        scanf("%f", &numbers[i]);
    }
    
    // Call the function to calculate average
    float average = calculateAverage(n, numbers);
    
    printf("The average is: %.2f\n", average);
    
    return 0;
}

// Function to calculate average
float calculateAverage(int n, float numbers[]) {
    float sum = 0;
    for(int i = 0; i < n; i++) {
        sum += numbers[i];
    }
    return sum / n;
}
