#include <stdio.h>
#include <string.h>

int main()
{
    char str[100];
    int i, length;

    // Input string
    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);

    // Find length of string
    length = strlen(str);

    // Remove newline character if present
    if(str[length - 1] == '\n')
    {
        str[length - 1] = '\0';
        length--;
    }

    // Display reversed string
    printf("Reversed string: ");
    for(i = length - 1; i >= 0; i--)
    {
        printf("%c", str[i]);
    }

    printf("\n");
    return 0;
}
