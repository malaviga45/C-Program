#include <stdio.h>

// Define structure
struct book
{
    int bookid;
    char title[50];
    char author[50];
    float price;
};

int main()
{
    struct book b;

    // Input book details
    printf("Enter Book ID: ");
    scanf("%d", &b.bookid);

    printf("Enter Book Title: ");
    scanf("%s", b.title);

    printf("Enter Author Name: ");
    scanf("%s", b.author);

    printf("Enter Book Price: ");
    scanf("%f", &b.price);

    // Display book details
    printf("\n--- Library Book Details ---\n");
    printf("Book ID: %d\n", b.bookid);
    printf("Book Title: %s\n", b.title);
    printf("Author Name: %s\n", b.author);
    printf("Book Price: %.2f\n", b.price);

    return 0;
}
