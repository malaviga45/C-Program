#include <stdio.h>
#include <string.h>

// Define structure
struct login
{
    char username[20];
    char password[20];
};

int main()
{
    struct login l;
    char user[20], pass[20];

    // Store username and password
    printf("Set Username: ");
    scanf("%s", l.username);

    printf("Set Password: ");
    scanf("%s", l.password);

    // Login process
    printf("\n--- Login ---\n");
    printf("Enter Username: ");
    scanf("%s", user);

    printf("Enter Password: ");
    scanf("%s", pass);

    // Verify credentials
    if(strcmp(l.username, user) == 0 && strcmp(l.password, pass) == 0)
    {
        printf("\nLogin Successful!");
    }
    else
    {
        printf("\nInvalid Username or Password!");
    }

    return 0;
}
