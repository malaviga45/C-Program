#include <stdio.h>
#include <string.h>

// Define structure
struct customer
{
    int cust_id;
    char name[50];
    char mobile[15];
};

int main()
{
    struct customer c[100];
    int n, i, search_id, found = 0;

    printf("Enter number of customers: ");
    scanf("%d", &n);

    // Input customer details
    for(i = 0; i < n; i++)
    {
        printf("\nEnter details of Customer %d\n", i + 1);

        printf("Enter Customer ID: ");
        scanf("%d", &c[i].cust_id);

        printf("Enter Customer Name: ");
        scanf("%s", c[i].name);

        printf("Enter Mobile Number: ");
        scanf("%s", c[i].mobile);
    }

    // Search customer by ID
    printf("\nEnter Customer ID to search: ");
    scanf("%d", &search_id);

    for(i = 0; i < n; i++)
    {
        if(c[i].cust_id == search_id)
        {
            printf("\n--- Customer Found ---\n");
            printf("Customer ID: %d\n", c[i].cust_id);
            printf("Name: %s\n", c[i].name);
            printf("Mobile Number: %s\n", c[i].mobile);
            found = 1;
            break;
        }
    }

    if(found == 0)
    {
        printf("\nCustomer with ID %d not found.\n", search_id);
    }

    return 0;
}
