#include <stdio.h>
#include <string.h>

int main()
{
    char str[100];
    int length;

    // Input string
    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);

    // Remove newline character if present
    str[strcspn(str, "\n")] = '\0';

    // Find length using strlen()
    length = strlen(str);

    // Display length
    printf("Length of the string = %d\n", length);

    return 0;
}
