#include <stdio.h>

int main()
{
    int day;
    int i;
    int workedDays = 0;

    // Loop for each day of the month
    for (i = 1; i <= 30; i++)
    {
        printf("Day %d - Worked? (1 = Yes, 0 = No): ", i);
        scanf("%d", &day);

        // Check valid input
        if (day == 1)
        {
            workedDays++;
        }
        else if (day == 0)
        {
            // Not worked, do nothing
        }
        else
        {
            printf("Invalid input. Please enter 1 or 0.\n");
            i--;   // repeat the same day
        }
    }

    // Display total worked days
    printf("\nTotal number of days worked in the month: %d\n", workedDays);

    return 0;
}
