#include <stdio.h>
#include <ctype.h>

int main()
{
    char str[100];
    int i;

    // Input string
    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);

    // Convert to uppercase
    for(i = 0; str[i] != '\0'; i++)
    {
        str[i] = toupper(str[i]);
    }

    // Display result
    printf("Uppercase string: %s", str);

    return 0;
}
