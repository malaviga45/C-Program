#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main()
{
    char mobile[20];
    int i, valid = 1;

    // Input mobile number
    printf("Enter mobile number: ");
    scanf("%s", mobile);

    // Check length
    if(strlen(mobile) != 10)
    {
        valid = 0;
    }
    else
    {
        // Check first digit
        if(mobile[0] != '6' && mobile[0] != '7' &&
           mobile[0] != '8' && mobile[0] != '9')
        {
            valid = 0;
        }

        // Check all digits
        for(i = 0; i < 10; i++)
        {
            if(!isdigit(mobile[i]))
            {
                valid = 0;
                break;
            }
        }
    }

    // Display result
    if(valid)
        printf("Mobile number is VALID.\n");
    else
        printf("Mobile number is INVALID.\n");

    return 0;
}
