#include <stdio.h>

// Define structure
struct student
{
    int id;
    char name[50];
    int marks;
};

int main()
{
    struct student s[100];
    int n, i, search_id, found = 0;

    printf("Enter number of records: ");
    scanf("%d", &n);

    // Input records
    for(i = 0; i < n; i++)
    {
        printf("\nEnter details of Student %d\n", i + 1);

        printf("Enter ID: ");
        scanf("%d", &s[i].id);

        printf("Enter Name: ");
        scanf("%s", s[i].name);

        printf("Enter Marks: ");
        scanf("%d", &s[i].marks);
    }

    // Search by ID
    printf("\nEnter ID to search: ");
    scanf("%d", &search_id);

    for(i = 0; i < n; i++)
    {
        if(s[i].id == search_id)
        {
            printf("\n--- Record Found ---\n");
            printf("ID: %d\n", s[i].id);
            printf("Name: %s\n", s[i].name);
            printf("Marks: %d\n", s[i].marks);
            found = 1;
            break;
        }
    }

    if(found == 0)
    {
        printf("\nRecord with ID %d not found.\n", search_id);
    }

    return 0;
}
