#include <stdio.h>

int main()
{
    float purchaseAmount;
    float discount;
    float finalAmount;

    // Ask the user to enter purchase amount
    printf("Enter the total purchase amount: ");
    scanf("%f", &purchaseAmount);

    // Check for valid purchase amount
    if (purchaseAmount <= 0)
    {
        printf("Invalid purchase amount entered.\n");
    }
    else
    {
        // Check discount eligibility
        if (purchaseAmount >= 5000)
        {
            discount = purchaseAmount * 0.20;   // 20% discount
            printf("You are eligible for 20%% discount.\n");
        }
        else if (purchaseAmount >= 3000)
        {
            discount = purchaseAmount * 0.10;   // 10% discount
            printf("You are eligible for 10%% discount.\n");
        }
        else
        {
            discount = 0;
            printf("No discount applicable.\n");
        }

        // Calculate final amount
        finalAmount = purchaseAmount - discount;

        printf("Discount Amount: %.2f\n", discount);
        printf("Final Amount to Pay: %.2f\n", finalAmount);
    }

    return 0;
}
