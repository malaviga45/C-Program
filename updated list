#include <stdio.h>

// Define structure
struct student
{
    int rollno;
    char name[50];
};

int main()
{
    struct student s[100];
    int n, add, i, total;

    // Existing records
    printf("Enter number of existing students: ");
    scanf("%d", &n);

    for(i = 0; i < n; i++)
    {
        printf("\nEnter details of Student %d\n", i + 1);

        printf("Enter Roll Number: ");
        scanf("%d", &s[i].rollno);

        printf("Enter Name: ");
        scanf("%s", s[i].name);
    }

    // Add new records
    printf("\nEnter number of new students to add: ");
    scanf("%d", &add);

    for(i = n; i < n + add; i++)
    {
        printf("\nEnter details of New Student %d\n", i + 1);

        printf("Enter Roll Number: ");
        scanf("%d", &s[i].rollno);

        printf("Enter Name: ");
        scanf("%s", s[i].name);
    }

    total = n + add;

    // Display updated list
    printf("\n--- Updated Student List ---\n");
    for(i = 0; i < total; i++)
    {
        printf("Roll Number: %d, Name: %s\n", s[i].rollno, s[i].name);
    }

    return 0;
}
