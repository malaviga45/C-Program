#include <stdio.h>

int main()
{
    int year;

    // Ask the user to enter a year
    printf("Enter a year: ");
    scanf("%d", &year);

    // Check for valid year
    if (year <= 0)
    {
        printf("Invalid year entered.\n");
    }
    else
    {
        // Leap year condition
        if ((year % 4 == 0 && year % 100 != 0) || (year % 400 == 0))
        {
            printf("%d is a Leap Year.\n", year);
        }
        else
        {
            printf("%d is not a Leap Year.\n", year);
        }
    }

    return 0;
}
