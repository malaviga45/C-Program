#include <stdio.h>
#include <ctype.h>
#include <string.h>

int main()
{
    char password[50];
    int i;
    int hasUpper = 0, hasDigit = 0;

    // Input password
    printf("Enter password: ");
    scanf("%s", password);

    // Check each character
    for(i = 0; password[i] != '\0'; i++)
    {
        if(isupper(password[i]))
            hasUpper = 1;

        if(isdigit(password[i]))
            hasDigit = 1;
    }

    // Validate password
    if(strlen(password) >= 8 && hasUpper && hasDigit)
    {
        printf("Password is VALID.\n");
    }
    else
    {
        printf("Password is INVALID.\n");
    }

    return 0;
}
