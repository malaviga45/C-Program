#include <stdio.h>

// Define structure
struct student
{
    int rollno;
    char name[50];
};

int main()
{
    struct student s[100];
    int n, i;

    printf("Enter number of students: ");
    scanf("%d", &n);

    // Input student records
    for(i = 0; i < n; i++)
    {
        printf("\nEnter details of Student %d\n", i + 1);

        printf("Enter Roll Number: ");
        scanf("%d", &s[i].rollno);

        printf("Enter Name: ");
        scanf("%s", s[i].name);
    }

    // Display count of records
    printf("\nTotal number of records stored = %d\n", n);

    return 0;
}
