#include <stdio.h>

int main()
{
    int n;
    int i;
    int m1, m2, m3;
    int total;

    // Ask the user to enter number of students
    printf("Enter number of students: ");
    scanf("%d", &n);

    // Check for valid number of students
    if (n <= 0)
    {
        printf("Invalid number of students.\n");
    }
    else
    {
        // Loop for each student
        for (i = 1; i <= n; i++)
        {
            printf("\nEnter marks for Student %d\n", i);

            printf("Enter marks of Subject 1: ");
            scanf("%d", &m1);

            printf("Enter marks of Subject 2: ");
            scanf("%d", &m2);

            printf("Enter marks of Subject 3: ");
            scanf("%d", &m3);

            // Calculate total marks
            total = m1 + m2 + m3;

            printf("Total Marks of Student %d = %d\n", i, total);
        }

        printf("\nTotal marks calculated for all students.\n");
    }

    return 0;
}
