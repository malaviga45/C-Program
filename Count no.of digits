#include <stdio.h>

int main()
{
    int number;
    int count = 0;

    // Display program title
    printf("Digit Count Program\n");
    printf("-------------------\n");

    // Input number from user
    printf("Enter a number: ");
    scanf("%d", &number);

    // Check if number is zero
    if (number == 0)
    {
        count = 1;
    }
    else
    {
        // Count digits using loop
        while (number != 0)
        {
            number = number / 10;
            count++;
        }
    }

    // Display result
    printf("Number of digits = %d\n", count);

    return 0;
}
