#include <stdio.h>
#include <string.h>

// Define structure
struct item
{
    int id;
    char name[50];
    int quantity;
    float price;
};

int main()
{
    struct item inv[100];
    int n = 0, choice, i, search_id, found;

    do
    {
        printf("\n--- Inventory Management System ---\n");
        printf("1. Add Item\n");
        printf("2. Display Items\n");
        printf("3. Search Item by ID\n");
        printf("4. Update Item\n");
        printf("5. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch(choice)
        {
            case 1:   // Add item
                printf("\nEnter Item ID: ");
                scanf("%d", &inv[n].id);

                printf("Enter Item Name: ");
                scanf("%s", inv[n].name);

                printf("Enter Quantity: ");
                scanf("%d", &inv[n].quantity);

                printf("Enter Price: ");
                scanf("%f", &inv[n].price);

                n++;
                printf("Item added successfully!\n");
                break;

            case 2:   // Display items
                if(n == 0)
                {
                    printf("\nNo items to display.\n");
                }
                else
                {
                    printf("\n--- Inventory Items ---\n");
                    for(i = 0; i < n; i++)
                    {
                        printf("\nItem %d\n", i + 1);
                        printf("ID: %d\n", inv[i].id);
                        printf("Name: %s\n", inv[i].name);
                        printf("Quantity: %d\n", inv[i].quantity);
                        printf("Price: %.2f\n", inv[i].price);
                    }
                }
                break;

            case 3:   // Search item
                printf("\nEnter Item ID to search: ");
                scanf("%d", &search_id);
                found = 0;

                for(i = 0; i < n; i++)
                {
                    if(inv[i].id == search_id)
                    {
                        printf("\nItem Found\n");
                        printf("ID: %d\n", inv[i].id);
                        printf("Name: %s\n", inv[i].name);
                        printf("Quantity: %d\n", inv[i].quantity);
                        printf("Price: %.2f\n", inv[i].price);
                        found = 1;
                        break;
                    }
                }

                if(found == 0)
                {
                    printf("Item not found!\n");
                }
                break;

            case 4:   // Update item
                printf("\nEnter Item ID to update: ");
                scanf("%d", &search_id);
                found = 0;

                for(i = 0; i < n; i++)
                {
                    if(inv[i].id == search_id)
                    {
                        printf("Enter New Name: ");
                        scanf("%s", inv[i].name);

                        printf("Enter New Quantity: ");
                        scanf("%d", &inv[i].quantity);

                        printf("Enter New Price: ");
                        scanf("%f", &inv[i].price);

                        printf("\nItem updated successfully!\n");
                        found = 1;
                        break;
                    }
                }

                if(found == 0)
                {
                    printf("Item not found!\n");
                }
                break;

            case 5:
                printf("\nExiting program...\n");
                break;

            default:
                printf("\nInvalid choice! Try again.\n");
        }

    } while(choice != 5);

    return 0;
}
